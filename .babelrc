{
  "presets": [
    [
        "@babel/preset-env", {
          "targets": {
            "node": "current"
          },
          "modules": "false"
        }
      ],
     "@babel/preset-react"
   ],
  "plugins": [
    "@babel/plugin-proposal-class-properties",
    ["module-resolver", {
      "root": ["./"],
      "alias": {
        "@": "./src"
      }
    }]
  ],
  "env": {
    "test": {
      "presets": ["@babel/preset-env", "@babel/preset-react"],
      "plugins": [
        "@babel/plugin-proposal-class-properties",
        ["module-resolver", {
          "root": ["./"],
          "alias": {
            "@": "./src"
          }
        }]
      ]
    }
  }
}
